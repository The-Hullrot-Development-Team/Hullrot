<controls:FancyWindow xmlns="https://spacestation14.io"
                xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                Title="{Loc 'block-game-title'}"
                Resizable="False">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Margin="10 10">
            <BoxContainer HorizontalAlignment="Left" Orientation="Vertical">
                 <!-- Next Piece Preview -->
                <PanelContainer Name="PreviewBackgroundPanel" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#86868d" />
                    </PanelContainer.PanelOverride>

                    <GridContainer Name="PreviewGrid" HSeparationOverride ="1" VSeparationOverride="1" />
                </PanelContainer>

                <Button Margin="0 10" Name="NewGameButton" Text="{Loc 'space-villain-button-new-game'}" />
            </BoxContainer>

            <PanelContainer Margin="10 0" StyleClasses="LowDivider" />

            <PanelContainer Name="MainBackgroundPanel">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#86868d" />
                </PanelContainer.PanelOverride>

                <GridContainer Name="MainGrid" HSeparationOverride ="1" VSeparationOverride="1" />
            </PanelContainer>
        </BoxContainer>

        <!-- Footer -->
        <BoxContainer Orientation="Vertical">
            <PanelContainer StyleClasses="LowDivider" />
            <BoxContainer Orientation="Horizontal" Margin="10 2 5 0" VerticalAlignment="Bottom">
                <Label Text="{Loc 'block-game-flavor-left'}" StyleClasses="WindowFooterText" />
                <Label Text="{Loc 'block-game-flavor-right'}" StyleClasses="WindowFooterText"
                        HorizontalAlignment="Right" HorizontalExpand="True"  Margin="0 0 5 0" />
                <TextureRect StyleClasses="NTLogoDark" Stretch="KeepAspectCentered"
                        VerticalAlignment="Center" HorizontalAlignment="Right" SetSize="19 19"/>
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
