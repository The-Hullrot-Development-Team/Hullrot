<DefaultWindow
    xmlns="https://spacestation14.io"
    Title="{Loc confirm-title}"
    MinWidth="500">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True">
        <Label Name="ConfirmMessage"/>
        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="CancelButton" Text="{Loc confirm-cancel}" HorizontalAlignment="Center"/>
            <Button Name="ConfirmButton" Text="{Loc confirm-confirm}" HorizontalAlignment="Center"/>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
