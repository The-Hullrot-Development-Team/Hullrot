<Control
    xmlns="https://spacestation14.io"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    Margin="4"
    MinSize="50 50">
    <GridContainer
        Columns="3">
        <cc:CommandButton Command="startround" ConfirmationPrompt="{Loc confirm-command-start-round}" Text="{Loc administration-ui-round-tab-start-round}" />
        <cc:CommandButton Command="endround" ConfirmationPrompt="{Loc confirm-command-end-round}" Text="{Loc administration-ui-round-tab-end-round}" />
        <cc:CommandButton Command="restartround" ConfirmationPrompt="{Loc confirm-command-restart-round}" Text="{Loc administration-ui-round-tab-restart-round}" />
        <cc:CommandButton Command="restartroundnow" ConfirmationPrompt="{Loc confirm-command-restart-round-now}" Text="{Loc administration-ui-round-tab-restart-round-now}" />
    </GridContainer>
</Control>
